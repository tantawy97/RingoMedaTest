@model Application.DTOs.Reminders.ReminderDto
@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-center">

<div class="col-xl-10 col-lg-12 col-md-9">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                <div class="col-lg-6">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Set Reminder</h1>
                        </div>
                            <form class="user" asp-action="Add">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input class="form-control form-control-user"
                                       id="exampleInputEmail" aria-describedby="emailHelp"
                                       asp-for="Name"
                                       placeholder="Enter Your Name...">
                                    <span asp-validation-for="Name" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                 <label asp-for="RemindTime" class="control-label"></label>
                                    <input asp-for="RemindTime" class="form-control-user">
                                    <span asp-validation-for="RemindTime" class="text-danger"></span>

                            </div>

                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                Add Reminder
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

        </div>

